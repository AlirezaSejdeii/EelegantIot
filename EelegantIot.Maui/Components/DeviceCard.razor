<MudPaper Class="m-2" Elevation=20>
    <MudGrid Justify="Justify.SpaceBetween" Spacing="20">
        <MudItem xs="6" Class="d-flex align-center justify-center mud-width-full py-8" onclick="@RenderDetails">
            <MudStack>
                <MudText Typo="Typo.h6">دستگاه شماره 1</MudText>
                <MudText Typo="Typo.subtitle1">ساعت 18 روشن میشود</MudText>
            </MudStack>
        </MudItem>
        <MudItem xs="4" Class="d-flex align-center justify-center mud-width-full py-8">
            <MudStack>
                <MudSwitch Value="true"></MudSwitch>
                <MudText Typo="Typo.subtitle1">pin_1234</MudText>
            </MudStack>
        </MudItem>
    </MudGrid>
</MudPaper>

@code {
    [Inject] public NavigationManager NavigationManager { get; set; }
    void RenderDetails()
    {
        NavigationManager.NavigateTo("device-detail");
    }
}